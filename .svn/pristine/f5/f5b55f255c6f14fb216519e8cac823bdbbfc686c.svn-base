.content {
  background: #FFFFFF;
  text-align: center;
  padding: 150px 0;
}

.content h1 {
  margin: 0;
  font-size: 180px;
  font-weight: 700;
  color: #40a9ff;
  text-shadow: 5px 5px 5px rgba(0, 0, 0, 0.3);
}

.content p {
  color: #40a9ff;
  opacity: 0.8;
  font-size: 24px;
  padding: 0;
  margin: 0;
  text-shadow: 1px 2px 2px rgba(0, 0, 0, 0.3);
}

.content .goHome {
  margin-top: 30px;
  font-weight: bolder;
  color: #40a9ff;
}

.ant-layout-footer {
  position: fixed;
  padding: 0;
  bottom: 0;
  width: 100%;
}
