.btn_box {
  margin-top: 90px;
  margin-bottom: 40px;
  text-align: center;
}

.btn_box button {
  margin-right: 120px;
}

.form_box {
  border: 1px solid rgb(232, 232, 232);
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
}

.form_box .ant-form-inline .ant-form-item {
  width: 48%;
  text-align: center;
}

.form_box .ant-form-item-control-wrapper {
  width: 50%;
}

.query_btn_box button {
  margin-right: 34px;
}

.page_box {
  margin: 30px auto;
  text-align: center;
}

:host ::ng-deep .title.ant-divider {
  margin-bottom: 30px;
}

.query_btn_box {
  margin: 15px auto;
  text-align: right;
}

.login_modal_err_msg {
  text-align: center;
}

.login_modal_err_msg i {
  font-size: 32px;
  margin-right: 30px;
}

.down_btn_box {
  margin-bottom: 15px;
  text-align: left;
}

.edit {
  margin: 3px 8px;
}

:host ::ng-deep .ant-form-item {
  width: 100% !important;
  margin-bottom: 10px;
}

:host ::ng-deep .ant-form-item-children {
  display: inline-block !important;
  width: 100% !important;
}

.example {
  text-align: center;
  background: rgba(255, 0, 0, 0.05);
  border-radius: 4px;
  margin-bottom: 20px;
  padding: 30px 50px;
  margin: 20px 0;
  height: 300px;
}

::ng-deep .ant-card-hoverable:hover {
  box-shadow: 6px 6px 8px rgba(0, 0, 0, 0.09);
}

.product_list > div {
  margin-bottom: 30px;
}

.product_info {
  border-right: 1px dashed rgba(232, 232, 232, 1);
}

.apply_box {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.apply_box button {
  width: 100%;
}

.apply_box button:hover {
  font-weight: bolder;
  font-size: 15px;
}

.product_rate {
  color: #8c8c8c;
  font-weight: bolder;
  font-size: 16px;
  margin-bottom: 12px;
}

.product_rate span {
  color: rgba(230, 0, 18, 1);
  font-size: 36px;
  font-weight: bolder;
}

.product_name {
  font-size: 16px;
  font-weight: bolder;
  color: rgba(0, 0, 0, 0.8);
  margin-bottom: 12px;
}

.money_data {
  font-weight: bolder;
  font-size: 20px;
  color: rgba(230, 0, 18, 1);
}

::ng-deep .ant-btn-dashed {
  border-color: rgba(230, 0, 18, 1);
  color: rgba(230, 0, 18, 1);
}

::ng-deep .ant-card-hoverable {
  cursor: default;
}
